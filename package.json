{
  "name": "sync-repository",
  "version": "1.1.0",
  "description": "A Github action to sync a Git repository",
  "main": "action.yml",
  "scripts": {
    "lint": "eslint --ext .ts,.yml --fix action.yml .github tests",
    "lint-no-fix": "npm run lint -- --no-fix",
    "test": "jest --ci",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "git": {
    "pre-commit": [
      "lint-no-fix"
    ]
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvuckovic/sync-repository"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.5",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vercel/git-hooks": "^1.0.0",
    "auto-changelog": "^2.3.0",
    "eslint": "^8.34.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-json-schema-validator": "^2.1.9",
    "eslint-plugin-jsonc": "^2.0.0",
    "jest": "^29.4.2",
    "js-yaml": "^4.1.0",
    "typescript": "^4.5.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "clearMocks": true,
    "restoreMocks": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/all",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:json-schema-validator/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "json-schema-validator/no-invalid": [
        "error",
        {
          "useSchemastoreCatalog": true
        }
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": 99,
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  }
}
