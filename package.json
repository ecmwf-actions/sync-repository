{
  "name": "sync-repository",
  "version": "0.0.1",
  "description": "A Github action to sync a Git repository",
  "main": "action.yml",
  "scripts": {
    "lint": "eslint --ext .js,.yml --fix action.yml .github tests",
    "lint-no-fix": "npm run lint -- --no-fix",
    "test": "jest",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "git": {
    "pre-commit": [
      "lint-no-fix"
    ]
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvuckovic/sync-repository"
  },
  "devDependencies": {
    "@vercel/git-hooks": "^1.0.0",
    "auto-changelog": "^2.3.0",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-json-schema-validator": "^2.1.9",
    "eslint-plugin-jsonc": "^2.0.0",
    "jest": "^27.3.1",
    "js-yaml": "^4.1.0"
  },
  "jest": {
    "clearMocks": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/all",
      "plugin:json-schema-validator/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "json-schema-validator/no-invalid": [
        "error",
        {
          "useSchemastoreCatalog": true
        }
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": 99,
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  }
}
